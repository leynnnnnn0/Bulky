@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-3">Edit Book</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="All"></div>
                <div class="mb-3 row">
                    <label asp-for="Title"></label>
                    <input type="text" class="form-control" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Author"></label>
                    <input type="text" class="form-control" asp-for="Author" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Description"></label>
                    <input type="text" class="form-control" asp-for="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="ISBN"></label>
                    <input type="text" class="form-control" asp-for="ISBN" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="ListPrice"></label>
                    <input type="text" class="form-control" asp-for="ListPrice" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Price"></label>
                    <input type="text" class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Price50"></label>
                    <input type="text" class="form-control" asp-for="Price50" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Price100"></label>
                    <input type="text" class="form-control" asp-for="Price100" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</a>
                    </div>
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
