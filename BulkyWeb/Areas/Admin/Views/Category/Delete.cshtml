@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-3">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3">
                <div class="mb-3 row">
                    <label asp-for="CategoryName"></label>
                    <input disabled type="text" class="form-control" asp-for="CategoryName" />
                </div>
                <div class="mb-3 row">
                    <label asp-for="DisplayOrder"></label>
                    <input disabled type="text" class="form-control" asp-for="DisplayOrder" />
                </div>
                <div class="mb-3 row">
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</a>
                    </div>
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

