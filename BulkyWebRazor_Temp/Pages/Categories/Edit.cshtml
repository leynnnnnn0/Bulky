@page
@model BulkyWebRazor_Temp.Pages.Categories.EditModel

<form method="post">
    <input type="hidden" asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <label asp-for="Category.CategoryName"></label>
            <input type="text" class="form-control" asp-for="Category.CategoryName" />
            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder"></label>
            <input type="text" class="form-control" asp-for="Category.DisplayOrder" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-outline-secondary form-control">Back to list</a>
            </div>
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

